<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Files</title>
</head>
<body>
    <h1>Files and Folders in <%= currentPath %></h1>

    <ul>
        <% files.forEach(file => { %>
            <% if (file.isDirectory) { %>
                <li>
                    <a href="/files/<%= file.url %>">
                        [Folder] <%= file.name %>
                    </a>
                </li>
            <% } else { %>
                <li>
                    <a href="/uploads/<%= file.url %>">
                        <%= file.name %>
                    </a>
                </li>
            <% } %>
        <% }) %>
    </ul>
</body>
</html>
